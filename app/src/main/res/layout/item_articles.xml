<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:id="@+id/articles_imageview" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dfdsfdsf"
        android:id="@+id/articles_name"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="55dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/articles_imageview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="ddddd"
        android:id="@+id/articles_texttitle"
        android:layout_marginBottom="25dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/articles_imageview"
        android:layout_alignLeft="@+id/articles_name"
        android:layout_alignStart="@+id/articles_name" />

</RelativeLayout>