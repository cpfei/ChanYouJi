<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/plans_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/plans_name"
            style="@style/plans"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="70dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plans_name"
            android:orientation="horizontal">

            <TextView
                style="@style/layout"
                android:id="@+id/plans_playtime"
                android:paddingLeft="15dp"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/icon_plan_time"
                android:text="游玩时间" />

            <TextView
                style="@style/layout"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:id="@+id/plans_aims"
                android:drawableLeft="@drawable/icon_plan_sight"
                android:text="旅行地" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:id="@+id/plans_description"
        android:layout_height="wrap_content" />

</LinearLayout>