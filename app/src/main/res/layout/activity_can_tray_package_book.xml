<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff6497ff">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/left"
            android:gravity="center">

            <ImageView
                android:paddingTop="10dp"
                style="@style/layout"
                android:id="@+id/image1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_right_normal" />

            <ImageView
                style="@style/layout"
                android:layout_toRightOf="@+id/image1"
                android:id="@+id/image2"
                android:padding="2dp"
                android:src="@drawable/logo_b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日本口袋书"
                android:textSize="18dp"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/image2"
                android:id="@+id/text_name"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:id="@+id/btnback"
                android:background="#0000"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:src="@drawable/share_a_normal" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pulltolistview"></com.handmark.pulltorefresh.library.PullToRefreshListView>


</LinearLayout>
