    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:gravity="center_vertical"
        android:background="#ff4b8dff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image1"
            android:paddingLeft="6dp"
           android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_normal" />
        <ImageView
            android:layout_toRightOf="@+id/image1"
            android:id="@+id/image_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_b"/>

        <TextView
            android:layout_toRightOf="@+id/image_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name"
            android:text="日本口袋书"
            android:paddingLeft="6dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_a_normal"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/share_btn"
            />



        </RelativeLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_back"
        android:id="@+id/pulltolistview"></com.handmark.pulltorefresh.library.PullToRefreshListView>



</RelativeLayout>
